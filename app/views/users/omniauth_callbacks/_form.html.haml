- if @user.errors.any?
  #error_explanation
    %h2
      = pluralize(@user.errors.count, "error")
      prohibited this tenant from being saved:
    %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg
%div
  = f.label :first_name
  %br/
  = f.text_field :first_name
%div
  = f.label :last_name
  %br/
  = f.text_field :last_name
%div
  = f.label :email
  %br/
  = f.email_field :email ,readonly: @user.email.present? ? true : false
%div
  = f.label :mobile_number
  %br/
  = f.text_field :mobile_number
%div
  = f.label :city
  %br/
  = f.text_field :city
%div
  = f.label :address
  %br/
  = f.text_area :address,:rows=>3,:cols=>43
