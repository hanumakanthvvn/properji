<%= form_for(@space) do |f| %>
    <% if @space.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@space.errors.count, "error") %> prohibited this space from being saved:</h2>

          <ul>
            <% @space.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :space_type %><br />
      <%= f.select :space_type, Space::SPACE_TYPES %>
