      <%= f.label :size %><br />
      <%= f.text_field :size %>
    </div><br />
    <div class="field">
      <%= f.label :wifi %><%= f.check_box :wifi %>
      <%= f.label :conference_room %><%= f.check_box :conference_room %>
      <%= f.label :kitchen %><%= f.check_box :kitchen %>
      <%= f.label :window %><%= f.check_box :window %>
      <%= f.label :parking %><%= f.check_box :parking %>
      <%= f.label :ac %><%= f.check_box :ac %>
      <%= f.label :printer %><%= f.check_box :printer %>
    </div>      <br />

    <div class="field">
      <%= f.label :location %><br />
      <%= f.text_field :location %>
    </div>
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :zip_code %><br />
      <%= f.text_field :zip_code %>
    </div>
    <div class="actions">
      <%= f.submit %>
